# Set login.php as default page
DirectoryIndex login.php

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Adjust this if your folder is NOT directly in htdocs
    RewriteBase /your_project/public/

    # Redirect everything to login.php if file/folder not found
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^.*$ login.php [L]
</IfModule>
